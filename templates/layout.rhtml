<meta charset="utf-8">
<meta name="viewport" content="width=device-width">
<title>
  <% if @path == 'index' %>
    Scott Weisman
  <% elsif @path.split('/').compact.length == 4 %>
    <%= title %> - Scott Weisman
  <% else %>
    <%= @path.capitalize.gsub(/[-]/, ' ') %> - Scott Weisman
  <% end %>
</title>
<meta name="description"
content="<%= @context[:description] || 'Scott Weisman is a lawyer turned web developer in Chicago' %>" />
</head>
  
<body>
  
